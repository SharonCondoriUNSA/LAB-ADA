#include <iostream>
#include <vector>
using namespace std;

void printArray(const vector<float>& arr) {
    for (float num : arr) {
        cout << num << " ";
    }
    cout << endl;
}

void selectionSort(vector<float>& arr, int n) {
    int comparaciones = 0;
    int intercambios = 0;

    for (int i = 0; i < n - 1; i++) {
        int minIdx = i;
        for (int j = i + 1; j < n; j++) {
            comparaciones++; // cada vez que compara
            if (arr[j] < arr[minIdx]) {
                minIdx = j;
            }
        }
        if (minIdx != i) {
            swap(arr[i], arr[minIdx]);
            intercambios++; // cada vez que hago un swap
        }
    }

    cout << "\nNumero de comparaciones: " << comparaciones << endl;
    cout << "Numero de intercambios: " << intercambios << endl;
}

int main() {
    int n;
    cout << "Cuantos numeros flotantes deseas ingresar?: ";
    cin >> n;

    vector<float> arr(n);
    cout << "Ingresa los numeros: " << endl;
    for (int i = 0; i < n; i++) {
        cin >> arr[i];
    }

    cout << "\n--- Selection Sort ---" << endl;
    selectionSort(arr, n);

    cout << "\nArreglo final ordenado:" << endl;
    printArray(arr);

    return 0;
}
