#include <iostream>
#include <vector>
#include <cstdlib>  // para rand()
#include <ctime>    // para medir tiempo

using namespace std;

//  Algoritmo de inserción
void insertionSort(vector<int>& arr) {
    int n = arr.size();
    for (int i = 1; i < n; i++) {
        int key = arr[i];
        int j = i - 1;

        while (j >= 0 && arr[j] > key) {
            arr[j + 1] = arr[j];
            j--;
        }
        arr[j + 1] = key;
    }
}

// Función para generar arreglo aleatorio
vector<int> generarArreglo(int n) {
    vector<int> arr(n);
    for (int i = 0; i < n; i++) {
        arr[i] = rand() % 10001; 
    }
    return arr;
}

int main() {
    srand(time(0)); 

    int tamanos[] = {1000, 5000, 10000};

    cout << "Evaluación del rendimiento del algoritmo Insertion Sort \n";

    for (int t : tamanos) {
        vector<int> arr = generarArreglo(t);

        clock_t inicio = clock();
        insertionSort(arr);
        clock_t fin = clock();

        double duracion = double(fin - inicio) / CLOCKS_PER_SEC;

        cout << "\nTamaño del arreglo: " << t << " elementos\n";
        cout << "Tiempo de ejecución: " << duracion << " segundos \n";
    }

    return 0;
}

